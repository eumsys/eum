-- Table: "TARIFA"

-- DROP TABLE "TARIFA";

CREATE TABLE "TARIFA"
(
  "idTarifa" integer NOT NULL,
  plaza integer,
  fec_ini date,
  fec_fin date,
  hor_ini time without time zone,
  hor_fin time without time zone,
  dia_sem character varying,
  des_tar character varying,
  costo integer,
  int_1 integer,
  int_2 integer,
  estado integer,
  prioridad integer,
  descuento integer,
  CONSTRAINT "TARIFA_pkey" PRIMARY KEY ("idTarifa")
)
WITH (
  OIDS=FALSE
);
ALTER TABLE "TARIFA"
  OWNER TO postgres;

