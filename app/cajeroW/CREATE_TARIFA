  add CONSTRAINT "BOLETO_tarifa_fkey" FOREIGN KEY (tarifa)
      REFERENCES "TARIFA" ("idTarifa") MATCH SIMPLE
      ON UPDATE NO ACTION ON DELETE NO ACTION